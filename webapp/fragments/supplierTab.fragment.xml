<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.ui.layout.form">
    <Table id="idTable" items="{/suppliers}" itemPress= "onItemPressSupp">
    <headerToolbar>
    <Toolbar>
    <ToolbarSpacer/>
    <Button icon="sap-icon://filter" tooltip="filter Data" press="onFilter"/>
    </Toolbar>
    </headerToolbar>
        <columns>
            <Column>
                <header>
                    <Label text="Name" />
                </header>
            </Column>

            <Column>
                <header>
                    <Label text="City" />
                </header>
            </Column>

            <Column minScreenWidth="Tablet" demandPopin="true">
                <header>
                    <Label text="Since When" />
                </header>
            </Column>

            <Column>
                <header>
                    <Label text="Contact Person" />
                </header>
            </Column>
        </columns>

        <ColumnListItem type="Navigation" >
            <cells>
                <Text text="{name}" />
                <Input value="{city}"  showValueHelp="true" valueHelpRequest="onF4Help"/>
                <Text text="{sinceWhen}" />
                <VBox>
                    <Text text="{contactPerson}" />
                    <Text text="{contactNo}" />
                </VBox>
            </cells>
        </ColumnListItem>
    </Table>
</core:FragmentDefinition>