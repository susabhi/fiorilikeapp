<mvc:View xmlns:mvc="sap.ui.core.mvc" 	xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    controllerName="com.emc.fin.ap.controller.Add">
    <Page title="Manage Products">
      <VBox class="sapUiSmallMargin">
          <f:SimpleForm id="SimpleFormChange354"
              editable="true"
              layout="ResponsiveGridLayout"
              title="Product Data"
              labelSpanXL="3"
              labelSpanL="3"
              labelSpanM="3"
              labelSpanS="12"
              adjustLabelSpan="false"
              emptySpanXL="4"
              emptySpanL="4"
              emptySpanM="4"
              emptySpanS="0"
              columnsXL="1"
              columnsL="1"
              columnsM="1"
              singleContainerFullSize="false" >
              <f:content>
                  <Label text="Product Id" />
                  <Input id="prodId" value="{prod>/prodData/PRODUCT_ID}" submit="onEnter"/>
                  <Button icon="sap-icon://collections-insight" tooltip="Load most Expensive product" press="onExpensive"></Button>
                  <Label text="Name/Description" />
                  <Input value="{prod>/prodData/NAME}">
                  </Input>
                  <Input value="{prod>/prodData/DESCRIPTION}">
                      <layoutData>
                          <l:GridData span="XL1 L2 M2 S4" />
                      </layoutData>
                  </Input>
                  <Label text="Supplier ID" />
                  <Input value="{prod>/prodData/SUPPLIER_ID}">
                      <layoutData>
                          <l:GridData span="XL1 L2 M2 S4" />
                      </layoutData>
                  </Input>
                  <Label text="TYPE CODE" />
                  <Input value="{prod>/prodData/TYPE_CODE}">
                      <layoutData>
                          <l:GridData span="XL1 L2 M2 S4" />
                      </layoutData>
                  </Input>
                  <Label text="Price" />
                  <Input value="{prod>/prodData/PRICE}">
                  </Input>
                  <Input value="{prod>/prodData/CURRENCY_CODE}">
                      <layoutData>
                          <l:GridData span="XL1 L2 M2 S4" />
                      </layoutData>
                  </Input>
                  <Label text="Category" />
                  <Select id="category" selectedKey="{prod>/prodData/CATEGORY}">
                      <items>
                          <core:Item text="Notebooks" key="Notebooks"/>
                          <core:Item text="Projectors" key="Projectors"/>
                          <core:Item text="Mice" key="Mice"/>
                      </items>
                  </Select>
              </f:content>
          </f:SimpleForm>
      </VBox>
      <footer>
          <Toolbar>
              <ToolbarSpacer />
              <Button id="idSave" text="Save" press="onSave" type="Accept"></Button>
              <Button id="idDelete" text="Delete" press="onDelete" type="Reject"></Button>
              <Button text="Clear" press="onClear" type="Emphasized"></Button>
          </Toolbar>
      </footer> 
            </Page>
        
        
      
</mvc:View>

